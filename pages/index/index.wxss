/**index.wxss**/
.index-master {
  background: #293044;
  height: 100vh;
}

.index-flex {
  width: 100%;
  height: 170rpx;
  font-size: 26rpx;
  background: #293044;
  color: white;
  position: fixed;
  z-index: 99999;
}

.index-wai {
  display: flex;
  height: 170rpx;
  align-items: flex-end;
  width: 520rpx;
  padding-bottom: 18rpx;
  box-sizing: border-box;
}

.index-flex-content {
  display: flex;
  align-items: center;
  flex: 3;
}

.index-flex-left {
  font-size: 40rpx;
  padding-left: 5px;
}

.index-flex-go {
  flex: 1;
}

.index-flex-len {
  font-size: 22rpx;
  margin-left: 10rpx;
}

.index-flex-shi {
  font-size: 32rpx;
}

.index-flex-dizhi {
  font-size: 24rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.index-row {
  display: none;
  width: 100%;
  padding: 0px 10px;
  box-sizing: border-box;
  font-size: 14px;
  position: fixed;
  height: 150rpx;
  background: gray;
}

.index-row-jw {
  text-align: center;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
}

.calendar .van-calendar__day {
  color: white;
}

.calendar .van-calendar__day.van-calendar__day--disabled {
  color: gray;
}

.calendar {
  --calendar-height: 330px;
  --calendar-background-color: #293044;
  --calendar-selected-day-size: 40px;
  --calendar-selected-day-color: white;
}

.calendar .van-calendar__weekdays {
  color: white;
}

.collapse {
  --cell-background-color: #293044;
  --collapse-item-content-background-color: #293044;
  --cell-text-color: white;
  --collapse-item-content-text-color: white;
}

.index-main {
  padding-top: 170rpx;
}


.calendar .van-calendar__header-title:empty+.van-calendar__header-title {
  display: none !important;
}

.calendar .van-calendar__header-subtitle {
  display: none;
}

.calendar .van-calendar__selected-day {
  border: 1px solid white;
  background: none;
}
.calendar .van-calendar__month-title{
  color: white;
}

.item-text {
  text-align: center;
}